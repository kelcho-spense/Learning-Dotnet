{
  "openapi": "3.0.4",
  "info": {
    "title": "E-Commerce Order Management API",
    "description": "API for managing e-commerce orders, products, customers, and order processing operations.",
    "contact": {
      "name": "API Support",
      "url": "https://www.ecommerceordermanagement.com/support",
      "email": "support@ecommerceordermanagement.com"
    },
    "version": "v1"
  },
  "paths": {
    "/api/Order": {
      "post": {
        "tags": [
          "Order"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrderRequestDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/OrderRequestDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/OrderRequestDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OrderItemRequestDTO": {
        "required": [
          "productId",
          "quantity"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "quantity": {
            "maximum": 1000,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "OrderRequestDTO": {
        "required": [
          "billingAddressId",
          "customerId",
          "items",
          "shippingAddressId"
        ],
        "type": "object",
        "properties": {
          "customerId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "shippingAddressId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "billingAddressId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "items": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItemRequestDTO"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "tags": [
    {
      "name": "Order"
    }
  ]
}